{
    "manifest_version": 3,
    "name": "YtNoAds",
    "description": "Chau Ads",
    "version": "1",
    "icons": {
      "128": "icon_128.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "https://www.youtube.com/*"
    ]
  }
